{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["@types/jest", "@types/node"]
  },
  "include": ["src/**/*", "main.ts"],
  "exclude": ["node_modules"]
}
